<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div>
        <h1 class="h1 text-center">Register Page</h1>
      </div>
      <% if (errors) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <h4 class="alert-heading">Validation Errors</h4>
          <% if (Array.isArray(errors)) { %>
            <% errors.forEach(error => { %>
              <p><%= error %></p>
            <% }) %>
          <% } else { %>
            <p><%= errors %></p>
          <% } %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %> 
      <div class="col-6 py-5 px-3 border rounded">
        <form action="/register" method="post">
          <div class="row mb-3">
            <label for="inputUsername3" class="col-sm-4 col-form-label">Username</label>
            <div class="col-sm-8">
              <input type="username" class="form-control" id="inputUsername3" name="username">
            </div>
          </div>
          <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-4 col-form-label">Password</label>
            <div class="col-sm-8">
              <input type="password" class="form-control" id="inputPassword3" name="password">
            </div>
          </div>
          <div class="row mb-3">
            <label for="inputConfirmPassword3" class="col-sm-4 col-form-label">Confirm Password</label>
            <div class="col-sm-8">
              <input type="password" class="form-control" id="inputConfirmPassword3" name="confirmPassword">
            </div>
          </div>
          <div class="row mb-3">
            <label for="inputAge" class="col-sm-4 col-form-label">Age</label>
            <div class="col-sm-2">
              <select id="inputAge" class="form-select" name="age">
                <option></option>
                <% for( let index = 18; index <= 100; index++ ) { %>
                  <option><%= index %></option>
                <% } %>
              </select>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-8 offset-sm-4">
              <button type="submit" class="btn btn-primary">Submit</button>
              <a href="/login" class="btn btn-secondary">Back to login</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include('./partials/footer.ejs') %>
</body>

</html>